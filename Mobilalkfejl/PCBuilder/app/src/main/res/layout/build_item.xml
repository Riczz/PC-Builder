<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    style="@style/Base.CardView"
    android:id="@+id/build_item_card_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:checkable="false"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:id="@+id/build_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/build_item_cpu_manufacturer"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:maxLength="25"
            android:maxLines="1"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/build_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/build_item_title"
            android:maxLines="1"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/build_item_cpu_manufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/cpu_manufacturer" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/build_item_delete"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:maxWidth="40dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:backgroundTint="@color/purple_500"
            app:icon="@drawable/ic_delete"
            app:iconGravity="textEnd"
            app:iconPadding="0dp" />

        <LinearLayout
            android:id="@+id/build_item_icons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/build_item_price"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/build_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/build_item_icons"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:maxLength="256"
            android:maxLines="4"
            android:textAlignment="viewStart"
            android:textSize="20sp" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>